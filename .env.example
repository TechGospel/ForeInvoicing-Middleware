# Database Configuration
DATABASE_URL=postgresql://firs_admin:secure_password_change_me@postgres:5432/firs_mbs
POSTGRES_DB=firs_mbs
POSTGRES_USER=firs_admin
POSTGRES_PASSWORD=secure_password_change_me

# Redis Configuration
REDIS_URL=redis://:redis_password_change_me@redis:6379
REDIS_PASSWORD=redis_password_change_me

# Application Configuration
NODE_ENV=production
PORT=5000

# Security Configuration
JWT_SECRET=your_jwt_secret_change_this_in_production_minimum_32_characters
SESSION_SECRET=your_session_secret_change_this_in_production_minimum_32_characters

# FIRS API Configuration
FIRS_API_URL=https://einvoice.firs.gov.ng/api/v1
FIRS_API_KEY=your_firs_api_key_here
FIRS_TIMEOUT=30000
FIRS_RETRY_ATTEMPTS=3

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5000,https://your-domain.com

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=/app/uploads

# Monitoring and Logging
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30000

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@domain.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@yourdomain.com

# Validation Configuration
STRICT_VALIDATION=true
ENABLE_FIRS_SUBMISSION=false
ENABLE_TIN_VALIDATION=true

# Audit and Compliance
AUDIT_LOG_RETENTION_DAYS=365
ENABLE_AUDIT_LOGGING=true

# Development Configuration
ENABLE_DEBUG_MODE=false
ENABLE_DETAILED_ERRORS=true

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=0 2 * * *

# Multi-tenant Configuration
DEFAULT_TENANT_ID=1
ENABLE_TENANT_ISOLATION=true

# Performance Configuration
DB_POOL_SIZE=10
DB_CONNECTION_TIMEOUT=5000