# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/firs_mbs_dev

POSTGRES_DB=firs_mbs
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password

# Redis Configuration
REDIS_URL=redis://:redis_password_change_me@redis:6379
REDIS_PASSWORD=redis_password_change_me

# Application Configuration
NODE_ENV=production
PORT=5000

# Security Configuration
JWT_SECRET=your_jwt_secret_change_this_in_production_minimum_32_characters
SESSION_SECRET=your_session_secret_change_this_in_production_minimum_32_characters

# FIRS API Configuration
FIRS_API_URL=https://api.firs.gov.ng
FIRS_API_KEY=your_firs_api_key_here

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5000,https://your-domain.com

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=/app/uploads

# Monitoring and Logging
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30000